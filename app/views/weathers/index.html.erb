<p style="color: green"><%= notice %></p>

<div class="container container-fluid">
  <div class="row">
    <div class="col">
      <h1>Weathers</h1>

      <!-- base template-->
      <table class="table">
        <thead>
          <tr>
            <th scope="col">City</th>
            <th scope="col">Weather</th>
            <th scope="col">Description</th>
            <!-- set a colspan for details, update and delete buttons -->
            <th colspan="3" scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @weathers.each do |weather| %>
            <tr>
              <td><%= weather.city %></td>
              <td><%= weather.weather %></td>
              <td><%= weather.description %></td>
              <td><%= link_to 'Details', weather, class: "btn btn-light" %></td>
              <td><%= link_to 'Edit', edit_weather_path(weather), class: "btn btn-light" %></td>
              <td><%= link_to 'Delete', weather, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <%= link_to 'New weather', new_weather_path, class: "btn btn-success my-2 my-sm-0" %>
      <%= link_to 'Search weather', search_weather_path, class: "btn btn-dark my-2 my-sm-0" %>
      <br>
      <br>
      <!-- end base template-->
    </div>
  </div>
</div>

